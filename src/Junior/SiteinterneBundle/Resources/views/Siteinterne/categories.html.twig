{% extends "JuniorSiteinterneBundle::layout.html.twig" %}

{% block title %}
{{ parent() }}
{% endblock %}
{% block feuilleStyleAlternative %}
		<link rel="stylesheet" href="{{asset('css/Siteinterne/css/carouseladditionnel.css')}}">
{% endblock %}


{% block body %}
			<section class="row">

{{include("JuniorSiteinterneBundle:Siteinterne:sousmenumissions.html.twig")}}
				<div id="content" class="col-md-4 col-md-offset-1">
					<h1>Les catégories</h1>
					<ul>
					{% if listeCategories %}
						{% for cat in listeCategories %}
							<li>{{cat.name}} <a href="{{path('junior_siteinterne_missions_categories', { 'id': cat.id, 'suppr': 'supprimer' })}}"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-remove"></span></button></a></li><br>
						{% endfor %}
					{% endif %}
					</ul>
				</div>
				
				<div class="col-md-offset-1 col-md-4">
					<div class="well">
					<h1>Nouvelle catégorie</h1>
						<br>
						<br>
						{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

						{{ form_errors(form) }}

						<div class="form-group">
							{{ form_label(form.name, "Nom de la catégorie", {'label_attr': {'class': 'col-sm-4 col-sm-offset-1 control-label'}}) }}

							{{ form_errors(form.name) }}

							<div class="col-sm-6">
								{{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						
						<div class="row">
							<div class="col-sm-6 col-sm-offset-4">
								{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
							</div>
						</div>


						{{ form_rest(form) }}

		  
						{{ form_end(form) }}
					</div>
				</div>
			</section>
{% endblock %}